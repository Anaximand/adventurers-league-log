[role=main]{
  min-height: 600px;
}

body{
  padding-top: 75px;
}

h1, .h1, h2, .h2, h3, .h3{
  margin-top:15px;
}

.well h1, .well .h1, .well h2, .well .h2, .well h3, .well .h3{
  margin-top:5px;
}

html,body {
  height:100%;
  width: 100%;
}

.special,
.special .jumbotron {
  height:100%;
}

.adventurers-league-logo {
  background-image: url(<%= asset_path 'DnD_ADVL.png' %>);
  background-position: center;
  background-repeat: no-repeat;
  background-size: 108px 55px;
  width: 108px;
  height: 55px;

  margin-right:  20px;
  margin-top:    10px;
  margin-bottom: 10px;
}

.jumbotron-art{
  background-image: url(<%= asset_path 'DnD_DMG_Art.jpg' %>);
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size:  cover;

  width:  100%;

  text-align: center;
  color: white;
}

.jumbotron-art .btn{
  background-color: Transparent;
  background-repeat:no-repeat;
  border: 1px solid white;
  cursor: pointer;

  background-color:rgba(0, 0, 0, 0.3);
}

.jumbotron-art .btn:hover{
  background-color:rgba(0, 0, 0, 0.2);
}

.jumbotron-art > p > a.fa-chevron-down{
  color: white;
  font-size:50px;
  padding-top: 5%;
}

.jumbotron-art > p > a.fa-chevron-down:hover{
  text-decoration: none;
}

#the-adventure-logsheet{
  padding-top:20%;
  padding-bottom:20%;
}

.navbar {
  margin-bottom: 0px;
  border-radius: 0px;
}

.navbar-nav > li > a {
  padding-right:  10px;
  padding-left:   10px;

  padding-top:    27px;
  padding-bottom: 27px;
}

.navbar-nav > li > a.disabled {
  color: #777;
  cursor: default;
}

