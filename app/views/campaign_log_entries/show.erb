<div class="row">
  <div class="col-md-offset-2 col-md-8">
    <h2>Show Log Entry</h2>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-offset-2 col-md-4">
    <strong>Adventure Title</strong> <br>
    <%= @log_entry.adventure_title %>
  </div>
 <div class="form-group col-md-2">
    <strong>Session</strong> <br>
    <%= @log_entry.session_num %>
  </div>

  <div class="form-group col-md-2">
    <strong>Date Played</strong> <br>
    <%= @log_entry.date_played %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-offset-2 col-md-2">
    <strong>XP Gained</strong> <br>
    <%= @log_entry.xp_gained %>
  </div>
  <div class="form-group col-md-2">
    <strong>GP +/-</strong> <br>
    <%= humanize_decimal @log_entry.gp_gained %>
  </div>
  <div class="form-group col-md-2">
    <strong>Downtime +/-</strong> <br>
    <%= @log_entry.downtime_gained %>
  </div>
  <div class="form-group col-md-1">
    <strong>Renown</strong> <br>
    <%= @log_entry.renown_gained %>
  </div>
  <div class="form-group col-md-1">
    <strong>Missions</strong> <br>
    <%= @log_entry.num_secret_missions %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-offset-2 col-md-4">
    <strong>Location Played</strong> <br>
    <%= @log_entry.location_played %>
  </div>
  <div class="form-group col-md-2">
    <strong>DM Name</strong> <br>
    <%= @log_entry.dm_name %>
  </div>
  <div class="form-group col-md-2">
    <strong>DM DCI Number</strong> <br>
    <%= @log_entry.dm_dci_number %>
  </div>
</div>

<div class="row">
  <div class="form-group col-md-offset-2 col-md-8">
    <strong>Notes</strong> <br>
    <%= @log_entry.notes %>
  </div>
</div>

<%= render partial: 'magic_items/list' unless @magic_items.empty? %>


<% if current_user = @log_entry.user %>
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <h3>Players</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <div class="table-responsive">
        <table class="table table-bordered table-responsive table-striped">
          <tr>
            <th>Player</th>
            <th>Character</th>
          </tr>
          <% @log_entry.characters.each do |character| %>
            <tr>
              <td><%= character.user.name %></td>
              <td><%= character.name %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
</div>
<% end %>