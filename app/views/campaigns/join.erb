<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <h2>Join Campaign</h2>
  </div>
</div>

<%= form_for CampaignParticipation.new, url: user_character_campaigns_path(@user) do |f| %>
  <div class="row">
    <div class="form-group col-md-offset-3 col-md-6">
      <%= f.label :token, 'Token *' %>
      <%= f.text_field :token, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-md-offset-3 col-md-6">
      <%= label_tag  :character_id, 'Character *' %>
      <%= select_tag :character_id, options_from_collection_for_select(@characters, :id, :name), { include_blank: true, class: 'form-control ' } %>
    </div>
  </div>

  <div class="row top-buffer-md">
    <div class="col-md-6 col-md-offset-3 text-right">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>