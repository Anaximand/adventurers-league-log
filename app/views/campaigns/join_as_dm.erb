<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <h2>Join Campaign</h2>
  </div>
</div>

<%= form_for DmCampaignAssignment.new, url: user_dm_campaign_assignments_path(@user) do |f| %>
  <div class="row">
    <div class="form-group col-md-offset-3 col-md-6">
      <%= f.label :token, 'Token *' %>
      <%= f.text_field :token, autofocus: true, class: 'form-control', value: @join_token, disabled: @join_token %>
    </div>
  </div>

  <%= f.hidden_field :token, autofocus: true, class: 'form-control', value: @join_token, disabled: !@join_token %>

  <div class="row top-buffer-md">
    <div class="col-md-6 col-md-offset-3 text-right">
      <%= f.submit 'Save', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
