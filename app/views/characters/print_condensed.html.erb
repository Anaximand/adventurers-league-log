<style type="text/css">
  nav { display: none }
  .navbar-text { display: none }

  body{ padding-top: 0px; }

  .adventurers-league-print-logo{
    display: list-item;
    list-style-image: url(<%= asset_path 'DnD_ADVL.png' %>);
    list-style-position: inside;
    letter-spacing: -1000em;
    font-size: 1px;
    color: #fff;
  }

  .page {
    page-break-after: always;
    page-break-inside: avoid;
  }
</style>

<% @index = 0 %>
<% @sheet_num = 1 %>

<% if(@log_entries.length == 0) %>
  <%= render "print_header" %>
  <%= render 'blank_print_log_entry' %>
<% end %>

<% @log_entries.each_with_index do |log_entry, index| %>
  <% @index = index %>
  <% if(index == 0 || index % 3 == 0) %>
    <%= "<div class='page'>".html_safe %>
    <%= render "print_header" %>
    <% @sheet_num = @sheet_num + 1 %>
  <% end %>

  <div class="row print-log-entry-box">
    <div class="row">
      <div class="col-xs-4">
        <%= display_attribute_for_print "Adventure Name",  log_entry.adventure_title %>
      </div>
      <div class="col-xs-2">
        <%= display_attribute_for_print "Session #",  log_entry.session_num %>
      </div>
      <div class="col-xs-2">
        <%= display_attribute_for_print "Date",  log_entry.date_played %>
      </div>
      <div class="col-xs-4">
        <%= display_attribute_for_print "DM Name and DCI #", make_dm_and_dci_string(log_entry.dm_name, log_entry.dm_dci_number) %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-2">
        <%= display_attribute_for_print "XP Earned",  log_entry.xp_gained %>
      </div>
      <div class="col-xs-2">
        <%= display_attribute_for_print "Gold +/-",  log_entry.gp_gained %>
      </div>
      <div class="col-xs-2">
        <%= display_attribute_for_print "Downtime +/-",  log_entry.downtime_gained %>
      </div>
      <div class="col-xs-2">
        <%= display_attribute_for_print "Renown Earned", log_entry.renown_gained %>
      </div>
      <div class="col-xs-2">
        <%= display_attribute_for_print "Magic Items +/-", log_entry.num_magic_items_gained %>
      </div>
      <div class="col-xs-2">
        <%= display_attribute_for_print "Magic Item Gained", log_entry.desc_magic_items_gained %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12">
          <label>Adventure Notes / Downtime Activites</label>
          <p class='print-notes'><%= log_entry.notes %></p>
      </div>
    </div>
  </div>

  <% if((index + 1) % 3 == 0) %>
    </div>
  <% end %>
<% end %>

<% while((@index + 1) % 3 != 0) %>
  <% @index = @index + 1 %>
  <%= render 'blank_print_log_entry' %>
<% end %>

</div>