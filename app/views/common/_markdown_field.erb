<%= form.text_area object, class: classes %>

<script>
function addEasyMDEToNotes(){
  var element = $("#<%= form.object_name.gsub(']','').gsub( '[', '_') %>_<%= object %>:visible")

  if (element.size() > 0){
    new EasyMDE({
      element: element.get(0),
      hideIcons: ["side-by-side","fullscreen"],
      spellChecker: false
    })
  }
}

addEasyMDEToNotes();

</script>
