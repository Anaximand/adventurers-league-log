<% if @hide_assigned_enabled %>
  <%= link_to "Show Assigned", user_dm_log_entries_path(@user, q: { s: params[:q][:s] } ), class: "btn btn-default" %>
<% else %>
  <%= link_to "Hide Assigned", user_dm_log_entries_path(@user, q: { log_assignments_character_id_null: true, s: params[:q][:s] }), class: "btn btn-default" %>
<% end %>

<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
    Print <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to "Print Full", print_user_dm_log_entries_path(@user), target: '_blank', rel: 'noopener noreferrer' %></li>
    <li><%= link_to "Print Condensed", print_condensed_user_dm_log_entries_path(@user), target: '_blank', rel: 'noopener noreferrer' %></li>
  </ul>
</div>

<% if @user == current_user %>
   <%= link_to "New Log Entry", [current_user, DmLogEntry, action: :new, q: params[:q]], class: "btn btn-primary" %>
<% end %>
