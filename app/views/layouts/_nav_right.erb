<li class="dropdown">
  <a href class="dropdown-toggle" data-toggle="dropdown" id="user-dropdown">
    About <b class="caret"></b>
  </a>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to 'Adventures', adventures_path %></li>
    <li><%= link_to 'Stats', stats_path %></li>
  </ul>
</li>

<li>
  <%= link_to 'Donate!', donate_path %>
</li>

<li>
  <%= link_to '', 'https://www.facebook.com/AdventurersLeagueLog/', { style: "font-size: 20px", class: "fa fa-facebook-square" } %>
</li>

<li>
  <%= link_to '', 'https://github.com/Ariel-Thomas/adventurers-league-log/issues', { style: "font-size: 20px", class: "fa fa-github" } %>
</li>

<% if user_signed_in? %>
  <li class="dropdown">
    <a href class="dropdown-toggle" data-toggle="dropdown" id="user-dropdown">
      <%= current_user.email %> <b class="caret"></b>
    </a>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to "Change My Password", edit_user_registration_path %></li>
      <li><%= link_to "Change My Details", edit_user_path(current_user) %></li>
      <li><%= link_to "Manage DMs", user_player_dms_path(current_user) %></li>
      <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
    </ul>
  </li>
<% else %>
  <li><%= link_to 'Log In', user_session_path unless request.fullpath == user_session_path %></li>
<% end %>
