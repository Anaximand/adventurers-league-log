<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to root_path do %>
        <span class="navbar-brand adventurers-league-logo"></span>
      <% end %>
    </div>

    <ul class="nav navbar-nav navbar-left">
      <li>
        <% if user_signed_in? %>
          <%= link_to 'Character Logs', user_characters_path(current_user) %>
        <% end %>
      </li>
      <li>
        <% if user_signed_in? %>
          <%= link_to 'DM Log', '', class: 'disabled' %>
        <% end %>
      </li>
    </ul>

