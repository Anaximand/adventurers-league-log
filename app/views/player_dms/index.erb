<div class="row">
  <h1 class='col-md-offset-4 col-md-4'>Manage Dms</h1>
</div>

<div class="row" id="player_dms-index">
  <div class='col-md-offset-4 col-md-4'>
    <div id='dms_list'>
      <div class="table-responsive">
        <table class="table table-bordered table-responsive table-dms">
          <tr>
            <th>Name</th>
            <th>DCI</th>
            <th>Actions</th>
          </tr>

          <tbody id='menu_items'>
            <% @player_dms.each do |dm| %>
              <tr>
                <td><%= dm.name %></td>
                <td><%= dm.dci %></td>
                <td>
                  <% if @user == current_user %>
                    <%= link_to "<span class='sr-only'>Edit<span>".html_safe, edit_user_player_dm_path(current_user, dm), class: "fa fa-pencil-square-o", title: "Edit DM" %>
                    <span style="margin-right:15px"></span>
                    <%= link_to "<span class='sr-only'>Delete<span>".html_safe, user_player_dm_path(current_user, dm), method: :delete, data: { confirm: "Are you sure you want to delete #{dm.name}?" }, class: "fa fa-trash-o", title: "Delete DM" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class='col-md-offset-4 col-md-4'>
      <%= link_to 'New DM', new_user_player_dm_path(current_user), class: 'btn btn-primary' %>
  </div>
</div>
